*
  display block
  box-sizing border-box
  transform translate3d(0, 0, 0)
  -webkit-transform-style preserve-3d
  -webkit-backface-visibility hidden
  -webkit-font-smoothing subpixel-antialiased
  user-select none !important
  touch-action none !important
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
@font-face
  font-family 'TradeGothic'
  src:  url(/fonts/TradeGothCond18.ttf) format('truetype')


html,body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family TradeGothic
html
  font-size 1em
body
  display flex
  align-items center
  justify-content center
  background-color #fff
  color #424242
  .wifi
    line-height 11rem
    font-size 10rem
    color #dedede
  .md-select-menu-container
    background #ffffff
  [placeholder]
    color red

  .md-input, md-select, md-select-value
    border-color #dedede
    border-width 0 0 1px
  .spacer
    margin 5px 0 0 0  
    &.lg
      margin 10px 0 0 0  
.error
  color red
.hidden
  opacity 0

